{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Flutter: Run App",
			"type": "shell",
			"command": "flutter",
			"args": [
				"run"
			],
			"group": "build",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Flutter: Hot Reload Dev",
			"type": "shell",
			"command": "flutter",
			"args": [
				"run",
				"--hot"
			],
			"group": "build",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}"
			}
		}
	]
}